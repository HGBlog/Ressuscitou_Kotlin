<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:context=".Fragment.Songs">

    <LinearLayout android:layout_width="match_parent" android:id="@+id/filters" android:orientation="horizontal" android:layout_height="wrap_content">
        <android.support.v7.widget.SearchView
                android:layout_width="match_parent"
                android:id="@+id/searchView"
                android:layout_weight=".40"
                android:layout_height="match_parent">
        </android.support.v7.widget.SearchView>

        <Spinner
                android:layout_below="@id/searchView"
                android:layout_width="match_parent"
                android:layout_alignParentRight="true"
                android:layout_weight=".60"
                android:id="@+id/liturgic_filter"
                android:entries="@array/liturgic_options"
                android:spinnerMode="dialog"
                android:tooltipText="Busque os canticos"
                android:layout_height="match_parent">
        </Spinner>
    </LinearLayout>

    <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                            android:layout_height="match_parent"
                                            android:layout_below="@id/filters"
                                            android:visibility="gone"
                                            android:id="@+id/song_list"
    >

    </android.support.v7.widget.RecyclerView>

    <TextView android:layout_width="match_parent" android:layout_height="match_parent"
        android:id="@+id/not_results"
              android:visibility="gone"
              android:gravity="center_horizontal|center_vertical"
              android:text="Nenhum resultado encontrado!"
    />

</RelativeLayout>